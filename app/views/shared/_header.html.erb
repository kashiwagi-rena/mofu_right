<header class="bg-lime-300 font-yomogi shadow">
  <div class="container mx-auto flex flex-wrap flex-col md:flex-row items-center">
    <%= link_to image_tag('logo_type.jpg', size: '150x150'), root_path%>
    <div class="font-yomogi md:ml-auto flex flex-wrap items-center text-base md:text-xl justify-center text-pink-500">
      <%# マイページ %>
      <% if user_signed_in? %>
        <%= link_to t('shared.header.my_page'), "" ,class: "mr-5 hover:text-yellow-700" %>
      <% end %>
      <%# 一覧画面 %>
      <%= link_to t('shared.header.look'), posts_path , class: "mr-5 hover:text-yellow-700"%>
      <%# 新規投稿 %>
      <% if user_signed_in? %>
        <%= link_to t('shared.header.posting'), new_post_path , class: "mr-5 hover:text-yellow-700"%>
      <% end %>
      <%# ログインしてるかどうかのif文 %>
      <% if user_signed_in? %>
        <%= button_to destroy_user_session_path , method: :delete, alert: "本当にログアウトしますか？", class: "hover:text-yellow-700" do %>
          ログアウト
        <% end %>
      <% else %>
        <%= link_to new_user_session_path , class: "hover:text-yellow-700" do %>
          ログイン
        <% end %>
      <% end %>
    </div>
  </div>
</header>