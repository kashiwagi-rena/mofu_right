<div class="font-yomogi text-red-900 container flex items-center justify-center text-center">
   <div class="row">
    <div class="col-lg-8 offset-lg-2">
      <h1 class="text-3xl mt-3"><%= t('.title') %></h1>
        <!-- にくきゅう右　-->
          <div class="absolute right-5">
            <%= image_tag 'nikukyu.jpg', size: "50x50" %>
          </div>
          <div class="absolute right-0 mt-10">
            <%= image_tag 'nikukyu.jpg', size: "50x50" %>
          </div>
      <!-- 掲示板内容 -->
      <article class="card">
        <div class="card-body">
          <div class='row'>
            <div class='col-md-3'>
              <%= image_tag @post.post_image.url, class: 'card-img-top img-fluid relative', size: '300x200' %>
            </div>
            <div class='col-md-9 relative'>
              <h3 class="d-inline text-xl"><%= @post.name %></h3>
              <!-- 投稿者以外に見せない -->
              <h6 class="text-lg"><%= simple_format(@post.body) %></h6>
              <!-- 削除・編集button -->
              <% if current_user && current_user.own?(@post) %>
                <%= render 'crud_menus', post: @post %>
              <% end %>
            </div>
          </div>
          <!-- Twitterシェア -->
          <% set_meta_tags  og: { image: image_url(@post.post_image_url) }, twitter: { image: image_url(@post.post_image_url) } %>
          <%# binding.pry %>
          <%= link_to "https://twitter.com/share?url=#{ request.url }&text=みてみて🐾%0a%0a「#{ @post.name }」は正義🐾%0a%0a&hashtags=もふは正義,もふもふ", target: '_blank', class: 'fa-brands fa-twitter fa-2xl relative mt-3', style: 'color: #909398;' do %>
          <% end %>
        </div>
          <!-- にくきゅう左　-->
            <div class="absolute left-5">
              <%= image_tag 'nikukyu.jpg', size: "50x50" %>
            </div>
            <div class="absolute left-10 mt-20">
              <%= image_tag 'nikukyu.jpg', size: "50x50" %>
            </div>
        <% if current_user %>
          <!-- コメントフォーム -->
            <%= render 'comments/form', { post: @post, comment: @comment } %>
        <% end %>
          <!-- コメントエリア -->
            <%= render 'comments/comments', { comments: @comments } %>
      </article>
    </div>
  </div>
</div>
