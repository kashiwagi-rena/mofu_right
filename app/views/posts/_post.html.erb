<%# 投稿の枠組みのテンプレート URL:https://tailblocks.cc/ %>
<section class="text-gray-600 body-font flex items-center justify-center text-center">
  <div id="post-id-<%= post.id %>">
    <div class="container px-5 py-5 mx-auto">
      <div class="p-4 lg:w-1/2 lg:flex">
            <!-- にくきゅう右　-->
              <div class="absolute right-5">
                <%= image_tag 'nikukyu.jpg', size: "50x50" %>
              </div>
              <div class="absolute right-0 mt-10">
                <%= image_tag 'nikukyu.jpg', size: "50x50" %>
              </div>
        <div class="h-full border-2 border-gray-200 border-opacity-60 rounded-lg overflow-hidden">
            <%= image_tag post.post_image_url, class: 'card-img-top', size: '400x200' %>
          <div class="font-yomogi p-6">
            <h1 class="title-font text-lg font-medium text-green-600 mb-3">
              <font style="vertical-align: inherit;">
                <%= link_to post.name, post_path(post) %>
              </font>
            </h1>
            <p class="leading-relaxed mb-3">
              <font style="vertical-align: inherit;">
                <p class="card-text"><%= post.body %></p>
              </font>
            </p>
            <div class="flex items-center flex-wrap justify-end"">
                <span class="text-gray-400 mr-3 inline-flex items-center lg:ml-auto md:ml-0 ml-auto leading-none text-sm pr-3 py-1 border-r-2 border-gray-200">
                  <svg class="w-4 h-4 mr-1" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round" viewBox="0 0 24 24">
                    <font style="vertical-align: inherit;">
                      <div class="list-inline-item">
                        <!-- Twitterシェア -->
                        <%= link_to "https://twitter.com/share?url=#{ request.url }&text=みてみて🐾%0a%0a「#{ post.name }」は正義🐾%0a%0a&hashtags=もふは正義,もふもふ", target: '_blank', class: 'fa-brands fa-twitter fa-2xl mr-3', style: 'color: #909398;' do %>
                        <% end %>
                        <!-- 削除・編集button -->
                        <% if current_user && current_user.own?(post) %>
                          <%= render 'crud_menus', post: post %>
                        <% elsif current_user %>
                          <%= render 'iine_buttons', post: post %>
                        <% end %>
                      </div>
                    </font>
                  </svg>
                </span>

              <span class="text-gray-400 inline-flex items-center leading-none text-sm">
                <%= link_to post_path(post) do %>
                  <svg class="w-4 h-4 mr-1" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round" viewBox="0 0 24 24">
                    <path d="M21 11.5a8.38 8.38 0 01-.9 3.8 8.5 8.5 0 01-7.6 4.7 8.38 8.38 0 01-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 01-.9-3.8 8.5 8.5 0 014.7-7.6 8.38 8.38 0 013.8-.9h.5a8.48 8.48 0 018 8v.5z"></path>
                  </svg>
                <% end %>
                <!-- にくきゅう左　-->
                  <div class="absolute left-5">
                    <%= image_tag 'nikukyu.jpg', size: "50x50" %>
                  </div>
                  <div class="absolute left-10 mt-20">
                    <%= image_tag 'nikukyu.jpg', size: "50x50" %>
                  </div>
                <font style="vertical-align: inherit;">
                  <font style="vertical-align: inherit;"><%= post.comments.count %></font>
                </font>
              </span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>