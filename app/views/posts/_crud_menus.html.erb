<div class="float-right flex flex-row">
  <%= button_to '削除', post_path(post), method: :delete, data: { confirm: "本当に削除しますか？" } %>
  <%= button_to post_path(post), id: "button-delete-#{post.id}", method: :delete, data: { turbo_method: :delete, turbo_confirm: t('defaults.message.delete_confirm') } do %>
    <i class="fa-regular fa-trash-can fa-2xl text-gray-500"></i>
  <% end %>
  <%= button_to edit_post_path(post.id), id: "button-edit-#{post.id}", method: :get do %>
    <i class="fa-regular fa-pen-to-square fa-2xl text-gray-500 ml-4"></i>
  <% end %>
</div>
