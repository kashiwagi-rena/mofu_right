<div class="font-yomogi text-red-900 font container pt-3">
  <div class="items-center justify-center text-center">
    <div class="row">
      <div class="col-12">
        <div class="row">
          <% if @posts.present? %>
            <div class="flex flex-row flex-wrap">
              <% @posts.each do |post| %>
                <div class="md:w-1/2 lg:w-1/3 p-1">
                  <%= render partial: 'post', locals: { post: post } %>
                </div>
              <% end %>
          <% else %>
            <p><%= t('.no_result') %><%= image_tag 'nikukyu.jpg', size: "50x50" %></p>
          <% end %>
        </div>
        <div class="font-yomogi items-center justify-center text-center my-6 text-xl text-pink-600">
            <%= paginate @posts %>
        </div>
      </div>
    </div>
  </div>
</div>