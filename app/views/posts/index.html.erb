<div class="font container pt-3">
  <div class="row">
    <div class="col-12">
      <div class="row">
        <% if @posts.present? %>
          <% @posts.each do |post| %>
            <%= render partial: 'post', locals: { post: post } %>
          <% end %>
        <% else %>
          <p><%= t('.no_result') %><%= image_tag 'nikukyu.jpg', size: "50x50" %></p>
        <% end %>
        <dev class="font-yomogi flex items-center justify-center text-center my-6 text-xl text-pink-600">
          <%= paginate @posts %>
        </dev>
      </div>
    </div>
  </div>
</dev>