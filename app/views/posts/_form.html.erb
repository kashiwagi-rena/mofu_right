<%= form_with model: post, local: true do |f| %>
              <!-- にくきゅう右　-->
  <div class="absolute right-20">
    <%= image_tag 'nikukyu.jpg', size: "50x50" %>
  </div>
  <div class="absolute right-10 mt-5">
    <%= image_tag 'nikukyu.jpg', size: "50x50" %>
  </div>
  <!-- 投稿名 -->
  <div class="flex items-center justify-center text-center relative">
    <div class="form-group items-center">
      <%= f.label :name %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
  </div>
      <!-- にくきゅう左　-->
  <div class="absolute left-0">
    <%= image_tag 'nikukyu.jpg', size: "50x50" %>
  </div>
  <div class="absolute left-10 mt-5">
    <%= image_tag 'nikukyu.jpg', size: "50x50" %>
  </div>
  <!-- 投稿本文 -->
  <div class="flex items-center justify-center text-center relative">
    <div class="form-group relative">
      <%= f.label :body %>
      <%= f.text_area :body, class: 'form-control', rows: 10 %>
    </div>

    <!-- にくきゅう右左　-->
    <div class="absolute left-0">
      <%= image_tag 'nikukyu.jpg', size: "50x50" %>
    </div>
    <div class="absolute right-10 mt-5">
      <%= image_tag 'nikukyu.jpg', size: "50x50" %>
    </div>
  </div>
                <!-- にくきゅう右　-->
  <div class="absolute right-20">
    <%= image_tag 'nikukyu.jpg', size: "50x50" %>
  </div>
  <div class="absolute right-10 mt-5">
    <%= image_tag 'nikukyu.jpg', size: "50x50" %>
  </div>
  <div class="form-group relative">
    <%= f.label :post_image %>
    <%= f.file_field :post_image, class: 'form-control mb-3', accept: 'image/*' %>
    <%= f.hidden_field :post_image_cache %>
  </div>
  <div class='mt-3 mb-3 relative'>
    <%= image_tag post.post_image.url,
                  id: 'preview',
                  size: '300x200' %>
  </div>
   <%= f.submit class: 'btn btn-primary' %>
 <% end %>