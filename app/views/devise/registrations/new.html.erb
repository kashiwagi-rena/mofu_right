<dev class="font-yomogi text-center">
  <h2 class="text-3xl">New Registration</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field text-xl mt-3 lg:mt-5">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'メアドを入力してにゃん' %>
    </div>

    <div class="field text-xl mt-3 lg:mt-5">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", placeholder: '６文字以上' %>
    </div>

    <div class="field text-xl mt-3 lg:mt-5">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: '🐾🐾🐾🐾🐾🐾' %>
    </div>

    <div class="actions">
      <%= f.button t(), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  <% end %>
</dev>